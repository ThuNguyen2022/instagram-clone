<div class="container home-section d-flex flex-row justify-content-center align-items-center">
  <div class="image-section mt-5 d-none d-lg-block">

  </div>
  <div class="login-section mt-5">
    <div class="card">
      <%= image_tag 'logo.png', class: "card-img-top pt-5" %>
      <div class="card-body text-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3 mt-4">
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        <% end %>
        <div class="d-flex align-item-center justify-content-center  mt-4">
          <div class="line"></div>
          <div class="line-text">OR</div>
          <div class="line"></div>
        </div>

        <a href="#" class="d-block mt-4 text-decoration-none fw-bold">
          Login with Facebook
        </a>
        <a href="#" class="mt-4 fs-6 text-decoration-none">forgot password?</a>
      </div>
    </div>
    <div class="card text-center mt-3">
      <div class="card-text pt-3 pb-3">
        Don't have an account?
        <a href="#" class="text-decoration-none fw-bold"> Sign up</a>
      </div>
    </div>
  </div>
</div>