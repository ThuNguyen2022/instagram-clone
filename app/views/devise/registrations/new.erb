<div class="container sign-up-section d-flex flex-row justify-content-center align-items-center">  
  <div class="sign-up-section mt-5">
    <div class="card text-center">
      <div class="card-body text-center">
        <%= image_tag 'logo.png', class: "card-img-top pt-3" %>
        <h5>Sign up to see photos and videos from your friend.</h3>
        <a href="#" class="d-block mt-3 text-decoration-none fw-bold">
          Login with Facebook
        </a>
        <div class="d-flex align-item-center justify-content-center  mt-4">
          <div class="line"></div>
          <div class="line-text">OR</div>
          <div class="line"></div>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-3 mt-4">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder:"Email" %>
          </div>
          <div class="mb-3">
            <%= f.text_field :full_name, autocomplete: "current-full-name", class: "form-control", placeholder: "Fullname" %>
          </div>
          <div class="mb-3">
            <%= f.text_field :username, autocomplete: "current-username", class: "form-control", placeholder: "Username" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", placeholder: "Confirm your passsword" %>
          </div>
          <p>People who use our service may have uploaded your contact information to Instagram. <a href = "https://www.facebook.com/help/instagram/261704639352628">Learn more</a></p>
          <%= f.submit "Sign Up", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
    <div class="card text-center mt-3">
      <div class="card-text pt-3 pb-3">
        Have a account?
        <%= link_to "Login", new_user_session_path, class: "text-decoration-none fw-bold" %>
      </div>
    </div>
  </div>
</div>
